<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.usf.cutr.realtime.bullrunner</groupId>
  <artifactId>cutr-gtfs-realtime-bullrunner</artifactId>
  <name>cutr-gtfs-realtime-bullrunner</name>
  <version>0.9.0-SNAPSHOT</version>
  <description>Produces GTFS-realtime updates from a Syncromatics API for bus positions and trip updates</description>
  <url>https://github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator/wiki</url>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator/issues</url>
  </issueManagement>
  <scm>
    <connection>scm:git:http://github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator.git</developerConnection>
    <url>https://github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedClassifierName>withAllDependencies</shadedClassifierName>
              <transformers>
                <transformer>
                  <mainClass>edu.usf.cutr.gtfs_realtime.bullrunner.GtfsRealtimeTripUpdatesProducerDemoMain</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>public.onebusaway.org</id>
      <url>http://nexus.onebusaway.org/content/groups/public/</url>
    </repository>
  </repositories>
</project>
