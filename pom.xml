<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.usf.cutr.realtime.bullrunner</groupId>
  <artifactId>cutr-gtfs-realtime-bullrunner</artifactId>
  <version>0.9.0-SNAPSHOT</version>
  <name>cutr-gtfs-realtime-bullrunner</name>
  <description>Produces GTFS-realtime updates from a Syncromatics API for bus positions and trip updates</description>
  <url>https://github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator/wiki</url>

  <scm>
    <connection>scm:git:http://github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator.git</developerConnection>
    <url>https://github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator</url>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/CUTR-at-USF/bullrunner-gtfs-realtime-generator/issues</url>
  </issueManagement>
  
  <repositories>
    <repository>
      <id>public.onebusaway.org</id>
      <url>http://nexus.onebusaway.org/content/groups/public/</url>
	</repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>org.onebusaway</groupId>
      <artifactId>onebusaway-gtfs-realtime-exporter</artifactId>
      <version>1.1.0</version>
    </dependency>
    <dependency>
      <groupId>org.onebusaway</groupId>
      <artifactId>onebusaway-guice-jsr250</artifactId>
      <version>1.0.2</version>
    </dependency>
    <dependency>
      <groupId>org.onebusaway</groupId>
      <artifactId>onebusaway-cli</artifactId>
      <version>1.0.1</version>
    </dependency>
    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
      <version>20090211</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.5.6</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>2.4</version>
            <configuration>
                <source>1.7</source>
                <target>1.7</target>
				<encoding>UTF-8</encoding>
            </configuration>
        </plugin>
	  <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedClassifierName>withAllDependencies</shadedClassifierName>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>org.onebusaway.gtfs_realtime.trip_updates_producer_demo.GtfsRealtimeTripUpdatesProducerDemoMain</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
